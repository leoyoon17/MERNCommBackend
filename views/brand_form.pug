extends layout

block content
  h1 #{title}

  form(method='POST', action='')
    div.form-group
      label(for='name') Brand:
      input#name.form-control(type='text', placeholder='Brand Name', name='name', value=(undefined===brand ? '' : brand.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg